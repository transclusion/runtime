{
  "name": "@transclusion/runtime-server",
  "version": "1.0.0-alpha.1",
  "description": "",
  "author": "Marius Lundg√•rd <studio@mariuslundgard.com>",
  "license": "MIT",
  "main": "dist/commonjs/index.js",
  "module": "dist/module/index.js",
  "typings": "dist/module/index.d.ts",
  "scripts": {
    "build": "npm-run-all tsc-*",
    "clean": "rimraf dist",
    "format": "prettier --no-bracket-spacing --no-semi --print-width 120 --single-quote --write \"{src,perf/src,test}/**/*.{js,ts,tsx}\"",
    "lint": "tslint -c tslint.json '{src,test}/**/*.{ts,tsx}'",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "tsc-commonjs": "tsc -p tsconfig.commonjs.json",
    "tsc-module": "tsc -p tsconfig.module.json"
  },
  "peerDependencies": {
    "@transclusion/runtime-core": "^1.0.0-alpha.1",
    "@transclusion/vdom": "^1.0.0-beta.2"
  },
  "devDependencies": {
    "@transclusion/runtime-core": "^1.0.0-alpha.1",
    "@transclusion/vdom": "^1.0.0-beta.2",
    "@types/jest": "^21.1.1",
    "@types/node": "^8.0.29",
    "jest": "^21.1.0",
    "jest-cli": "^21.1.0",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.8.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "typescript": "^2.5.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(\\.|/)(test|spec)\\.tsx?$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ]
  }
}
